import java.util.Scanner;
public class loop {
    public static void main(String[] args) {
        Scanner myObj = new Scanner(System.in);
        System.out.println("Enter number of rows:");
        int num = myObj.nextInt();
        int i = 0; int j=0;
        for(i=0;i<num;i++)
        { for (j =0;j<=i;j++)
        {System.out.print("*");
        }
            System.out.println();
        }

    }
}
